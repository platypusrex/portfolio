{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "actions/*": ["./src/actions/*"],
      "components/*": ["./src/components/*"],
      "constants/*": ["./src/constants/*"],
      "gql": ["./src/gql/index.ts"],
      "hooks/*": ["./src/hooks/*"],
      "layout/*": ["./src/layout/*"],
      "lib/*": ["./src/lib/*"],
      "modules/*": ["./src/modules/*"],
      "styles": ["./src/styles/*"],
      "types/*": ["./src/types/*"],
      "public/*": ["./public/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["**/*.cjs", "**/*.mjs", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
